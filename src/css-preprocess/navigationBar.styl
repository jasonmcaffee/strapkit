@import "src/css-preprocess/_variables"


.navigation-bar{
    //size
    height:50px;

    //positioning
    position: fixed;
    top:0;
    left:0;
    width:100%;

    //color
    background: rgb(59,60,61);
    background: -moz-linear-gradient(top,  rgba(59,60,61,1) 0%, rgba(78,79,81,1) 80%, rgba(71,71,71,1) 98%, rgba(51,51,51,1) 100%);
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(59,60,61,1)), color-stop(80%,rgba(78,79,81,1)), color-stop(98%,rgba(71,71,71,1)), color-stop(100%,rgba(51,51,51,1)));
    background: -webkit-linear-gradient(top,  rgba(59,60,61,1) 0%,rgba(78,79,81,1) 80%,rgba(71,71,71,1) 98%,rgba(51,51,51,1) 100%);
    background: -o-linear-gradient(top,  rgba(59,60,61,1) 0%,rgba(78,79,81,1) 80%,rgba(71,71,71,1) 98%,rgba(51,51,51,1) 100%);
    background: -ms-linear-gradient(top,  rgba(59,60,61,1) 0%,rgba(78,79,81,1) 80%,rgba(71,71,71,1) 98%,rgba(51,51,51,1) 100%);
    background: linear-gradient(to bottom,  rgba(59,60,61,1) 0%,rgba(78,79,81,1) 80%,rgba(71,71,71,1) 98%,rgba(51,51,51,1) 100%);
    filter: unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#3b3c3d', endColorstr='#333333',GradientType=0 )");

    //box shadow
    -webkit-box-shadow: 0px 1px 11px rgba(49, 50, 50, 0.39);
    -moz-box-shadow:    0px 1px 11px rgba(49, 50, 50, 0.39);
    box-shadow:         0px 1px 11px rgba(49, 50, 50, 0.39);

}

